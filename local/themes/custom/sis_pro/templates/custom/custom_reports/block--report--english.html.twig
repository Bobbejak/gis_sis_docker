<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold text-red-600 mb-4">English Report</h1>

  <div class="bg-white shadow rounded-lg p-6">
    <table class="table-auto border-collapse border border-gray-400 w-full">
      <thead>
        <tr>
          <th class="border border-gray-300 px-4 py-2">Student</th>
          <th class="border border-gray-300 px-4 py-2">English Literature</th>
          <th class="border border-gray-300 px-4 py-2">Grammar</th>
          <th class="border border-gray-300 px-4 py-2">Writing</th>
        </tr>
      </thead>
      <tbody>
        {% for student in students %}
          <tr>
            <td class="border border-gray-300 px-4 py-2">{{ student.name }}</td>
            <td class="border border-gray-300 px-4 py-2">{{ student.scores['English Literature']|default('N/A') }}</td>
            <td class="border border-gray-300 px-4 py-2">{{ student.scores.Grammar|default('N/A') }}</td>
            <td class="border border-gray-300 px-4 py-2">{{ student.scores.Writing|default('N/A') }}</td>
          </tr>
        {% else %}
          <tr>
            <td colspan="4" class="border border-gray-300 px-4 py-2 text-center">No data available.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
